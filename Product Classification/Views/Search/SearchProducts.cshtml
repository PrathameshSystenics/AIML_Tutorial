@model List<Product>
@{
    ViewData["Title"] = "Search";
    string productSearched = Context.Request.Query["searchtext"].FirstOrDefault() ?? "";
    string noOfProductsToSearch = Context.Request.Query["noofproductstosearch"].FirstOrDefault() ?? "15";

}

<div class="container py-5">
    <!-- Search Header -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-5 mb-5">Product Similarity Search</h1>
        </div>

        <!-- Search Controls -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form class="row g-3" asp-controller="Search" asp-action="SearchProducts" method="get" enctype="multipart/form-data" role="search">
                        <div class="col-12 col-md-6">
                            <div class="form-floating">
                                <input type="search" class="form-control" id="searchQuery" name="searchtext" placeholder="Search products..." value="@productSearched">
                                <label for="searchQuery">Search products...</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="form-floating">
                                <input type="number"
                                       class="form-control"
                                       id="productCount"
                                       name="noofproductstosearch"
                                       value="@noOfProductsToSearch"
                                       min="1"
                                       placeholder="Number of products">
                                <label for="productCount">Number of products</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="submit" class="btn btn-primary h-100 w-100">Search Products</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-light">
                Found <strong>@Model.Count</strong> products
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Products Grid -->
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <span class="badge bg-primary mb-2 category-badge">@product.Category</span>
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text text-muted">@product.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn btn-outline-primary btn-sm view-details"
                                        data-product-id="@product.ID">
                                    View Details
                                </button>
                                <small class="text-muted">ID: @product.ID.ToString().Substring(0, 8)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- No Results -->
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-info py-5">
                    <h4 class="alert-heading mb-3">No Products Found</h4>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="productDetailsModal" tabindex="-1" aria-labelledby="productDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-info">
                    <h5 class="modal-title" id="productDetailsModalLabel">Product Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="modalLoading" class="text-center py-4 d-none">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <div id="modalContent">
                        <div class="mb-3">
                            <span class="badge bg-primary" id="modalCategory"></span>
                        </div>
                        <h4 id="modalTitle" class="mb-3"></h4>
                        <p id="modalDescription" class="text-muted"></p>
                        <div class="text-muted">
                            <small>Product ID: <span id="modalProductId"></span></small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Search.js"></script>
}