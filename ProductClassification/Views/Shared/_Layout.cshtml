
@{
    string controllername = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Classification</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Classification.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-action="Index" asp-controller="Home">Classification</a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item ">
                            <a class="nav-link active text-white" asp-action="Index" asp-controller="Home" >Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Evaluate">Evaluate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="PreviousEvalResult" asp-controller="Evaluate">Previous Evaluation Results</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="SearchProducts" asp-controller="Search"><i class="bi bi-search"></i> Search </a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-white" asp-action="Index" asp-controller="Chat"><i class="bi bi-chat-left-dots-fill"></i> Chat</a>
                        </li>

                    </ul>
                    @if(!controllername.Equals("Search")){
                        <form class="d-flex" role="search" asp-controller="Search" asp-action="SearchProducts" method="get" enctype="multipart/form-data">
                            <input class="form-control me-2" type="search" placeholder="Search Products" aria-label="Search" name="searchtext">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>
    @*Rendering the Bootstrap Toast Partially*@
    <partial name="BSToast"></partial>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p class="m-0">&copy; 2025 - Classification</p>
            <p class="m-0">Made by Prathamesh Dhande</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
